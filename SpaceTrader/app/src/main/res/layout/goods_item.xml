<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">


    <TextView
        android:id="@+id/good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/good_number_have"
        android:layout_width="32dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/good_name"
        android:layout_marginStart="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="1" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/good_number_have"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        android:text="@string/buy"
        android:textSize="15sp" />

    <Button
        android:id="@+id/sell_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/buy_button"
        android:text="@string/sell"
        android:layout_alignParentTop="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/good_buy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/sell_button" />


    <TextView
        android:id="@+id/good_sell_price"
        android:layout_width="32dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/good_buy_price"
        android:layout_marginStart="355dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="1" />

</RelativeLayout>